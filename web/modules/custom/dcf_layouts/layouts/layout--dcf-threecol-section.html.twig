{#
/**
 * @file
 * Default theme implementation to display a DCF three-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
  {% if settings.extra_classes %}
    <div class="{{ settings.extra_classes }}">
  {% endif %}

    {% if settings.title %}
      <h2 class="{{ settings.title_classes}}">{{ settings.title }}</h2>
    {% endif %}

    <div{{ attributes }}>

      {% if content.first %}
        <div {{ region_attributes.first.addClass('dcf-col', 'layout__region', 'layout__region--first') }}>
          {{ content.first }}
        </div>
      {% endif %}

      {% if content.second %}
        <div {{ region_attributes.second.addClass('dcf-col', 'layout__region', 'layout__region--second') }}>
          {{ content.second }}
        </div>
      {% endif %}

      {% if content.third %}
        <div {{ region_attributes.third.addClass('dcf-col', 'layout__region', 'layout__region--third') }}>
          {{ content.third }}
        </div>
      {% endif %}

    </div>

  {% if settings.extra_classes %}
    </div>
  {% endif %}
{% endif %}
