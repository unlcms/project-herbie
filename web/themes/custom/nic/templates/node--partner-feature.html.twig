<div class="partner-hero">
  <div class="partner-feature-lead">{{ content.lead_image }}</div>
  <div class="partner-feature-hero-text" style="position: absolute;z-index: 999;margin: 0 auto;left: 0;right: 0;bottom:0; text-align: center;padding-top:10em;width: 100%;background: linear-gradient(180deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 80%, rgba(255,255,255,1) 100%);">
    <h1>{{ label }}</h1>
    <h3 style="padding-top:0;">{{ content.headline }}</h3>
  </div>
</div>
<div id="node-{{ node.id }}"{{ attributes.addClass('not-hero basic') }}>
  <div class="page-padding">
    <div class="grid-set" style="padding-top:3em;">
      <div class="bp591-grid-col-two-thirds">

        {{ content.body }}
      </div>
      <div class="bp591-grid-col-one-third">
        {% if secondary_image %}
          {{ content.secondary_image }}
        {% endif %}
        <blockquote style="font-size:1.6em;">&ldquo;<i>{{ content.pull_quote }}</i>&rdquo;</blockquote>
      </div>
    </div>
    <p style="margin-top:1.4em;"><a href="featured-partners"><i>Read more featured partner stories</i></a></p>
  </div>
</div>
