{%
  set classes = [
    'view',
    'view-' ~ id|clean_class,
    'view-id-' ~ id,
    'view-display-id-' ~ display_id,
    dom_id ? 'js-view-dom-id-' ~ dom_id,
    'dcf-mt-8',
    'dcf-mb-8'
  ]
%}
<div{{ attributes.addClass(classes).setAttribute('id', 'news-'~ dom_id) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}
  {% if header %}
    {{ header }}
  {% endif %}
  {{ exposed }}
  {{ attachment_before }}
  {% if rows -%}
    <h3> News </h3>
    <div class="view-content dcf-grid-halves@sm dcf-grid-fourths@lg dcf-col-gap-vw dcf-row-gap-6 dcf-mb-6 unl-scroll-fx-children-fade-in" data-fx-duration=".4">
      {{ rows }}
    </div>
  {% elseif empty -%}
    {{ empty }}
  {% endif %}

  {{ pager }}
  {{ attachment_after }}

  {% if preprocessed_total_rows > 12 and more %}
    <div class="dcf-d-flex dcf-jc-flex-end">
      <a class="dcf-btn dcf-btn-secondary dcf-capitalize" href="{{more['#url'].toString}}news">More news</a>
    </div>
  {% elseif preprocessed_total_rows > 12 %}
    <div class="dcf-d-flex dcf-jc-flex-end">
      <a class="dcf-btn dcf-btn-secondary dcf-capitalize" href="{{path('<current>')}}news">More news</a>
    </div>

  {% endif %}
  {% if footer %}
    {{ footer }}
  {% endif %}
</div>
