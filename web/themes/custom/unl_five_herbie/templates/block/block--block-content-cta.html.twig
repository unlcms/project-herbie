{{ attach_library('unl_five_herbie/cta') }}
{% set attributes = attributes ?: create_attribute() %}
{% set call_to_action_classes = ['unlcms-component-spacer', 'unlcms-cta-block', 'dcf-col-100%', 'dcf-grid-thirds@md', 'dcf-col-gap-6', 'dcf-row-gap-3', 'dcf-p-6'] %}
{{ attach_library('unl_five_herbie/cta') }}

<div{{ attributes.addclass(call_to_action_classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}
  {% block cta_title %}
    <div class="unlcms-cta-title dcf-d-flex dcf-ai-center dcf-jc-center dcf-uppercase">
      {{ content.b_cta_title }}
    </div>
  {% endblock %}

  {% block cta_summary %}
    <div class="dcf-d-flex dcf-ai-center dcf-jc-center dcf-pt-2 dcf-pb-2 dcf-txt-center">
      <div class='unlcms_cta_summary'>
        {{ content.b_cta_summary }}
      </div>
    </div>
  {% endblock %}

  {% block cta_link %}
    <div class="dcf-d-flex dcf-ai-center dcf-jc-center dcf-pt-2 dcf-pb-2">
      {{ content.b_cta_link }}
    </div>
  {% endblock %}
</div>
