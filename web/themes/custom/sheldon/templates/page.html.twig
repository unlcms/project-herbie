    <script>
        function setStatus() {
            var d = new Date(new Date().toLocaleString('en', {timeZone: 'America/Chicago'}));
            var hours = d.getHours();
            var mins = d.getMinutes();
            var day = d.getDay();
            var dayofmonth = d.getDate();
            var month = d.getMonth();

            // Football Saturdays (month is zero-indexed)
            /*  if (
                (month == 4 && dayofmonth == 27) ||
                (month == 8 && dayofmonth == 31) ||
                (month == 9 && (dayofmonth == 7 || dayofmonth == 14 || dayofmonth == 21)) ||
                (month == 10 && dayofmonth == 5) ||
                (month == 11 && (dayofmonth == 2 || dayofmonth == 23))
                ) {
                return false;
              }*/

            if (day == 0 && (hours >= 12 && hours < 17)) {
                document.getElementById('open-status').innerHTML = 'Open Now';
                return false;
            } else if (day == 1) {
                return false;
            } else if (day == 4 && (hours >= 10 && hours < 19)) {
                document.getElementById('open-status').innerHTML = 'Open Now';
                return false;
            } else if (hours >= 10 && hours < 17) {
                document.getElementById('open-status').innerHTML = 'Open Now';
                return false;
            } else {
                return false;
            }
        }
        setStatus();
